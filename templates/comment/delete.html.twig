{% extends 'base.html.twig' %}

{% block title %}
    {{ 'delete.delete'|trans({'%id%': task.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1>{{ 'delete.delete'|trans({'%id%': task.id|default('')}) }}</h1>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-group row float-sm-right">
                    <input type="submit" value="{{ 'delete.delete'|trans }}" class="btn btn-primary"/>
                </div>
                <div class="form-group row float-sm-left">
                    <a href="{{ url('task_index') }}" class="btn btn-link">
                        {{ 'back_to_list'|trans }}
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
