{% extends 'base.html.twig' %}

{% block title %}
    {{ 'comment.comment'|trans({'%id%': comment.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'comment.comment'|trans({'%id%': comment.id|default('')}) }}</h1>
    {% if comment is defined and comment|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'id.id'|trans }}</dt>
            <dd>{{ comment.id }}</dd>
            <dt>{{ 'content.content'|trans }}</dt>
            <dd>{{ comment.content }}</dd>
            <dt>{{ 'email.email'|trans }}</dt>
            <dd>{{ comment.email }}</dd>
            <dt>{{ 'nick.nick'|trans }}</dt>
            <dd>{{ comment.nick }}</dd>
            <dt>{{ 'song.song'|trans }}</dt>
            <dd>{{ comment.task.id }}</dd>
        </dl>
        <p>
            <a href="{{ url('task_index') }}" title="{{ 'back_to_list'|trans }}" class="button">
                {{ 'back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
